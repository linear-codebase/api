{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": [
    "ultracite"
  ],
  "linter": {
    "rules": {
      "nursery": {
        "useConsistentTypeDefinitions": "off"
      },
      "style": {
        "noParameterProperties": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    },
    "globals": [
      "Bun"
    ]
  }
}
